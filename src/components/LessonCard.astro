---
interface Props {
	title: string;
	body: string;
	image: string;
}

const { title, body , image } = Astro.props;
---

<div class="w-96 h-96 flex flex-col justify-center items-center p-10 bg-gray-300 rounded-xl gap-5">
<img src={image} class="h-40  rounded-lg"/>
<h1 class="text-2xl font-bold text-purple-800">{title}</h1>
<p class="text-xl text-center">{body}</p>
</div>